<p id="notice"><%= notice %></p>

<div class="row page-header">
  <h1>Lista Respuestas</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Usuario</th>
      <th>Paciente</th>
      <th>Test</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.date %></td>
        <td><%= answer.user.try(:name) %></td>
        <td><%= answer.patient.try(:name) %></td>
        <td><%= answer.answer_groups.first.question.type_test.try(:name) %></td>
        <td><%= link_to "Ver <span class='glyphicon glyphicon-search' aria-hidden='true'></span>".html_safe, answer %></td>
        <td></td>
        <td></td>
        <!-- <td><%= link_to 'Edit', edit_answer_path(answer) %></td> -->
        <!-- <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

